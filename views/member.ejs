<!-- Wappler include head-page="layouts/main" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="member" appConnect="local" -->
<dmx-serverconnect id="serverconnect1" url="/api/addMember" noload="true"></dmx-serverconnect>
<meta name="ac:route" content="/member">
<div class="container">
    <div class="row">
        <div class="col"></div>
    </div>
    <div class="row">
        <div class="col">
            <form is="dmx-serverconnect-form" id="serverconnectform1" method="post" action="/api/addMember" dmx-generator="bootstrap5" dmx-form-type="horizontal">
                <div class="form-group mb-3 row">
                    <label for="inp_fName" class="col-sm-2 col-form-label">F name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_fName" name="fName" aria-describedby="inp_fName_help" placeholder="Enter F name">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_lName" class="col-sm-2 col-form-label">L name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_lName" name="lName" aria-describedby="inp_lName_help" placeholder="Enter L name">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_email" class="col-sm-2 col-form-label">Email</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inp_email" name="email" aria-describedby="inp_email_help" placeholder="Enter Email">
                    </div>
                </div>

                <div class="form-group mb-3 row">
                    <label for="address1" class="col-sm-2 col-form-label">Address 1</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="address1" name="address1" aria-describedby="inp_dateJoined_help" placeholder="Enter Address 1">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="address2" class="col-sm-2 col-form-label">Address 2</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="address2" name="address2" aria-describedby="inp_dateJoined_help" placeholder="Enter Address 2">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="postcode" class="col-sm-2 col-form-label">Postcode</label>
                    <div class="col-sm-10">
                        <input class="form-control" id="postcode" name="postcode" aria-describedby="inp_dateJoined_help" placeholder="Enter Postcode">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="mobile1" class="col-sm-2 col-form-label"><b>Mobile</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" id="mobile1" name="mobilee" aria-describedby="inp_dateJoined_help" placeholder="Enter Mobile">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="tel" class="col-sm-2 col-form-label"><b>Telephone</b></label>
                    <div class="col-sm-10">
                        <input class="form-control" id="tel" name="tel" aria-describedby="inp_dateJoined_help" placeholder="Enter Tel No.">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="tel1" class="col-sm-2 col-form-label">Notes</label>
                    <div class="col-sm-10">
                        <textarea id="notes" class="form-control" name="notes"></textarea>
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <label for="inp_dateJoined" class="col-sm-2 col-form-label">Date joined</label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control" id="inp_dateJoined" name="dateJoined" aria-describedby="inp_dateJoined_help" placeholder="Enter Date joined">
                    </div>
                </div>
                <div class="form-group mb-3 row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary" dmx-bind:disabled="state.executing">Save <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>