<!-- Wappler include head-page="layouts/lh_menu" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="all_comms_docs" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxFormatter:{},dmxBootstrap5Tooltips:{}}" -->
<meta name="ac:route" content="/emails/all_comms_docs">
<dmx-serverconnect id="scGetAllCommsDocs" url="/api/emailDocs/getCommsDocs"></dmx-serverconnect>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="row"></div>
            <div class="row">
                <div class="col">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover table-sm">
                            <thead>
                                <tr>
                                    <th>Membership No.</th>
                                    <th>Date Created</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>

                                    <th>Comm status</th>
                                    <th scope="row">Type</th>
                                    <th scope="row">Actions</th>
                                </tr>
                            </thead>
                            <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scGetAllCommsDocs.data.qryAllCommsDocs" id="tableRepeat2">
                                <tr>
                                    <td dmx-text="memNo.pad(4)" class="text-center"></td>
                                    <td dmx-text="updatedDate.formatDate('dd-MM-yyyy')"></td>
                                    <td dmx-text="fName"></td>
                                    <td dmx-text="lName"></td>

                                    <td dmx-text="commStatusDesc"></td>
                                    <td dmx-hide="status"></td>
                                    <td dmx-text="commTypeDesc"></td>
                                    <td>
                                        <button id="btnEdit" class="btn btn-info text-white" dmx-bs-tooltip="'Edit/View Document'" data-bs-trigger="hover" dmx-show="status==1">
                                            <i class="fas fa-edit fa-sm"></i></button>
                                        <button id="btnSend" class="btn btn-success" dmx-bs-tooltip="'Create PDF or Send Email'" dmx-show="status==3">
                                            <i class="fas fa-paper-plane"></i>
                                        </button>
                                        <button id="btnView" class="btn btn-dark" dmx-bs-tooltip="'View Created PDF or Email'" dmx-show="status&gt;=5">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>