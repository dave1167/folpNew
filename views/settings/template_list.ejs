<!-- Wappler include head-page="layouts/lh_menu" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="template_list" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxBootstrap5Modal:{},dmxSummernote:{},dmxFormatter:{}}" -->
<dmx-serverconnect id="scGetTemplates" url="/api/templates/listTemplates">
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
    </div>
</dmx-serverconnect>
<dmx-serverconnect id="scGetSingleTemplate" url="/api/templates/getSingleTemplate" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scUpdateTemplates" url="/api/templates/updateTemplate" noload="true"></dmx-serverconnect>
<div class="modal" id="modEditTemplate" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">


            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col">
                        <form is="dmx-serverconnect-form" id="serverconnectform1" method="post" action="/api/templates/updateTemplate" dmx-generator="bootstrap5" dmx-form-type="horizontal" dmx-populate="scGetSingleTemplate.data.query">
                            <div class="form-group mb-3 row">
                                <label for="inp_name" class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inp_name" name="name" dmx-bind:value="scGetSingleTemplate.data.query.name" aria-describedby="inp_name_help" placeholder="Enter Name">
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <label for="inp_description" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inp_description" name="description" dmx-bind:value="scGetSingleTemplate.data.query.description" aria-describedby="inp_description_help" placeholder="Enter Description">
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <label for="inp_category" class="col-sm-2 col-form-label">Category</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inp_category" name="category" dmx-bind:value="scGetSingleTemplate.data.query.category" aria-describedby="inp_category_help" placeholder="Enter Category">
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <label for="inp_template_html" class="col-sm-2 col-form-label">Template html</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="inp_template_html" name="template_html" dmx-bind:value="scGetSingleTemplate.data.query.template_html" aria-describedby="inp_template_html_help" placeholder="Enter Template html">
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <label for="inp_templateId" class="col-sm-2 col-form-label">Template</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" id="inp_templateId" name="templateId" dmx-bind:value="scGetSingleTemplate.data.query.templateId" aria-describedby="inp_templateId_help" placeholder="Enter Template">
                                </div>
                            </div>
                            <div class="form-group mb-3 row">
                                <div class="col-sm-2">&nbsp;</div>
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary" dmx-bind:value="scGetSingleTemplate.data.query.Save" dmx-bind:disabled="state.executing">Save <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<meta name="ac:route" content="/settings/template_list">

<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Template</th>
                            <th>Name</th>
                            <th>Category</th>
                        </tr>
                    </thead>
                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scGetTemplates.data.query" id="tableRepeat1">
                        <tr>
                            <td dmx-text="templateId"></td>
                            <td>
                                <button id="btn1" class="btn" dmx-on:click="scGetSingleTemplate.load({templateid: templateId});modEditTemplate.show()"><i class="fas fa-edit fa-lg"></i></button>
                            </td>
                            <td dmx-text="name"></td>
                            <td dmx-text="category"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>