<!-- Wappler include head-page="layouts/lh_menu" fontawesome_5="cdn" bootstrap5="local" is="dmx-app" id="template_list" appConnect="local" components="{dmxBootstrap5TableGenerator:{},dmxBootstrap5Modal:{},dmxSummernote:{}}" -->
<meta name="ac:route" content="/settings/template_list">

<!-- Server Connects -->
<dmx-serverconnect id="scGetTemplates" url="/api/templates/listTemplates"></dmx-serverconnect>
<dmx-serverconnect id="scGetSingleTemplate" url="/api/templates/getSingleTemplate" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scUpdateTemplates" url="/api/templates/updateTemplate" noload="true"></dmx-serverconnect>

<!-- Edit Modal -->
<div class="modal fade" id="modEditTemplate" is="dmx-bs5-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Edit Template</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <form id="frmEditTemplate" method="post" is="dmx-serverconnect-form" action="/api/templates/updateTemplate" dmx-on:success="scGetTemplates.load(); modEditTemplate.hide()">

                    <!-- IMPORTANT: send the template id back on update -->
                    <input type="hidden" name="templateId" dmx-bind:value="scGetSingleTemplate.data.query.templateId">

                    <!-- (Optional) show the ID read-only for sanity -->
                    <div class="mb-3">
                        <label class="form-label">Template ID</label>
                        <input type="text" class="form-control" readonly dmx-bind:value="scGetSingleTemplate.data.query.templateId">
                    </div>

                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="inp_name" name="name" placeholder="Template Name" dmx-bind:value="scGetSingleTemplate.data.query.name">
                        <label for="inp_name" class="form-label">Template Name</label>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea id="tempNotes" class="form-control" name="tempNotes" style="height: 100px" dmx-bind:value="scGetSingleTemplate.data.query.description"></textarea>
                        <label for="tempNotes" class="form-label">Notes</label>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Template HTML</label>
                        <div id="editor1" is="dmx-summernote" dmx-bind:toolbar="[['style',['style']],['font',['bold','underline','clear']],['fontname',['fontname']],['color',['color']],['para',['ul','ol','paragraph']],['table',['table']],['insert',['link','picture','video']],['view',['fullscreen','codeview','help']]]" height="300" dmx-bind:value="scGetSingleTemplate.data.query.template_html"></div>
                    </div>

                    <input id="html" name="html" type="hidden" dmx-bind:value="editor1.value">

                    <div class="d-flex gap-2">
                        <button id="btn2" class="btn btn-success" type="submit">Save</button>
                        <button id="btn3" class="btn btn-dark" type="button" data-bs-dismiss="modal">Cancel</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>

<!-- List -->
<div class="container">
    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover align-middle">
                    <thead>
                        <tr>
                            <th style="width: 90px;">ID</th>
                            <th style="width: 70px;">Edit</th>
                            <th>Name</th>
                            <th style="width: 140px;">Category</th>
                        </tr>
                    </thead>

                    <tbody is="dmx-repeat" dmx-generator="bs5table" dmx-bind:repeat="scGetTemplates.data.query" id="tableRepeat1">
                        <tr>
                            <td dmx-text="templateId"></td>
                            <td>
                                <button class="btn btn-outline-primary btn-sm" dmx-on:click="scGetSingleTemplate.load({templateid: templateId}); modEditTemplate.show()">
                                    <i class="fas fa-edit"></i>
                                </button>
                            </td>
                            <td dmx-text="name"></td>
                            <td dmx-text="category"></td>
                        </tr>
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>