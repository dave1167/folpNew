                                                <div class="mb-3">
                                                    <h6 class="text-white bg-primary p-2 rounded">Document Templates</h6>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="selectDoc4" class="form-label col-form-label-sm">Welcome Document Template</label>
                                                    <select id="selectDoc4" class="form-select form-select-sm" dmx-bind:options="scGetDocTemps.data.query" optiontext="name" optionvalue="templateId" dmx-bind:value="scList.data.query.where('key', 'WelcomeDocumentTemplate').first().value"></select>
                                                </div>
                                                <div class="form-group mb-3">
                                                    <label for="selectDoc5" class="form-label col-form-label-sm">Renewal Document Template</label>
                                                    <select id="selectDoc5" class="form-select form-select-sm" dmx-bind:options="scGetDocTemps.data.query" optiontext="name" optionvalue="templateId" dmx-bind:value="scList.data.query.where('key', 'RenewalDocumentTemplate').first().value"></select>
                                                </div>
                                                <div class="form-group mb-3">
