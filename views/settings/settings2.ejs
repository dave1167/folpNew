<meta name="ac:route" content="/settings/settings2">

<!-- current section (drives the filter) -->
<dmx-value id="vSectionId" dmx-bind:value="1"></dmx-value>

<!-- list settings filtered by current section -->
<dmx-serverconnect id="scList" url="/api/settings/listSettings" dmx-param:sectionid="{{vSectionId.value.toNumber()}}">
</dmx-serverconnect>
<dmx-serverconnect id="scUpdateDocs" url="/api/templates/updateTemplate"></dmx-serverconnect>
<dmx-serverconnect id="scGetEmailTemps" url="/api/templates/getEmailTemps"></dmx-serverconnect>
<dmx-serverconnect id="scGetDocTemps" url="/api/templates/getDocsTemps"></dmx-serverconnect>

<dmx-serverconnect id="scSave" url="/api/settings/save" noload="true"></dmx-serverconnect>
<dmx-serverconnect id="scGetSingleSettings" url="/api/settings/getSingleSetting" noload="true" dmx-param:settingsid="tableRepeatEmail[$index].settingsId"></dmx-serverconnect>

<div class="modal fade" id="modeditSettings" is="dmx-bs5-modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Settings</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form is="dmx-serverconnect-form" id="scFormEditEmail" method="post" action="/api/settings/save" dmx-generator="bootstrap5" dmx-form-type="floating">
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="inp_key" name="key" dmx-bind:value="scGetSingleSettings.data.query.key" placeholder="Setting">
                                <input id="txtSettingsId" name="txtSettingsId" type="number" class="form-control" dmx-bind:value="scGetSingleSettings.data.query.settingsId">
                                <label for="inp_key">Setting</label>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="inp_value" name="value" dmx-bind:value="scGetSingleSettings.data.query.value" placeholder="Value">
                                <label for="inp_value">Value</label>
                            </div>
                        </div>
                    </div>
                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="inp_description" name="description" dmx-bind:value="scGetSingleSettings.data.query.description" placeholder="Description">
                                <label for="inp_description">Description</label>
                            </div>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col">
                            <div class="form-group mb-3">
                                <button type="submit" class="btn btn-primary ms-2" dmx-bind:value="scGetSingleSettings.data.query.Save" dmx-bind:disabled="state.executing">Save <span class="spinner-border spinner-border-sm" role="status" dmx-show="state.executing"></span></button><button type="button" class="btn btn-secondary ms-2" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
