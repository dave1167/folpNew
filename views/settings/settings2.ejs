                                                    <select id="selectDoc6" class="form-select form-select-sm" dmx-bind:options="scGetDocTemps.data.query" optiontext="name" optionvalue="templateId" dmx-bind:value="scList.data.query.where('key', 'ReminderDocumentTemplate').first().value"></select>
                                                </div>
                                            </div>
                                            <div class="row w-100 mt-3">
                                                <div class="col text-end">
                                                    <button id="btn1" class="btn btn-primary" dmx-on:click="scUpdateDocs.load({})" type="submit">Save</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>


                        </div>
                    </div>

